                    console.log(res.data);
                    self.globalData.globalUserInfo.userDesc = res.data.userDesc;
                    // console.log(self.globalData.globalUserInfo.userDesc);
                    self.$apply();
                }
            }

            this.$apply();
        },

        descChange(e) {
            this.globalData.globalUserInfo.userDesc = e.detail.value;
