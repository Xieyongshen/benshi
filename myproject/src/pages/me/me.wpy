                                self.globalData.access_token =
                                    token_res.data.access_token;
                                self.globalData.account_id =
                                    token_res.data.account_id;
                                self.$apply();
                                console.log(self.globalData);
                                self.hasUserInfo = true;
                                self.$apply();
                            }
