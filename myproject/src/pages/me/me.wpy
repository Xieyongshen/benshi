    async getUserInfoFun2(e) {
        let self = this;
        console.log('1111');
        const APP_ID = 'wx73bdc6a0b793aa42';
        const APP_SECRET = 'd18f4ce06504cc4d7c2dbb0e06e03929';
        var OPEN_ID = '';
        var SESSION_KEY = '';
        var CODE = '';
